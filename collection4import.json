  "item": [
    {
      "name": "Users",
      "item": [
        {
          "name": "Create New User",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"string\",\n  \"email\": \"string\",\n  \"password\": \"string\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": { "raw": "{{baseURI}}/api/auth/register" }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "pm.test(\"Response should be empty or contain error\", function () {",
                  "    var json = pm.response.json();",
                  "    pm.expect(json).to.be.an('object');",
                  "    pm.expect(Object.keys(json).length === 0 || json.error !== undefined).to.be.true;",
                  "});",
                  "pm.test(\"Error response format\", function () {",
                  "    if(pm.response.code !== 201) {",
                  "        var json = pm.response.json();",
                  "        pm.expect(json).to.have.property('error');",
                  "        pm.expect(json.error).to.be.a('string');",
                  "    }",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"string\",\n  \"password\": \"string\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": { "raw": "{{baseURI}}/api/auth/login" }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "    if (pm.response.code === 200) {",
                  "        pm.collectionVariables.set(\"token\", pm.response.json().token);",
                  "    }",
                  "});"
                ]
              }
            }
          ]
        },
