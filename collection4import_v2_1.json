			"name": "1. Setup & Auth",
			"item": [
				{
					"name": "Sign Up (Unique)",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// Generate unique user data",
									"const timestamp = Date.now();",
									"pm.collectionVariables.set(\"unq_username\", \"user_\" + timestamp);",
									"pm.collectionVariables.set(\"unq_email\", \"user_\" + timestamp + \"@test.com\");",
									"pm.collectionVariables.set(\"unq_password\", \"pass_\" + timestamp);"
								],
								"type": "text/javascript"
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 201\", function () {",
									"    pm.response.to.have.status(201);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\r\n  \"username\": \"{{unq_username}}\",\r\n  \"email\": \"{{unq_email}}\",\r\n  \"password\": \"{{unq_password}}\"\r\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseURI}}/api/auth/register",
							"host": [
								"{{baseURI}}"
							],
							"path": [
								"api",
								"auth",
								"register"
							]
						}
					},
					"response": []
				},
				{
					"name": "Login & Get Token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"var json = pm.response.json();",
									"if (json.token) {",
									"    pm.collectionVariables.set(\"token\", json.token);",
									"    // Decode token to get UserId",
									"    var payload = JSON.parse(atob(json.token.split('.')[1]));",
									"    pm.collectionVariables.set(\"userId\", payload.userId);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\r\n  \"username\": \"{{unq_username}}\",\r\n  \"password\": \"{{unq_password}}\"\r\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseURI}}/api/auth/login",
							"host": [
								"{{baseURI}}"
							],
							"path": [
								"api",
								"auth",
								"login"
							]
						}
					},
					"response": []
				}
			]
